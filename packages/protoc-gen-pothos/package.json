{
  "name": "protoc-gen-pothos",
  "version": "0.1.0",
  "description": "Generate DSL for Pothos GraphQL from Protocol Buffers IDL",
  "keywords": [
    "graphql",
    "grpc",
    "pothos",
    "protobuf",
    "typescript"
  ],
  "bin": "./bin/protoc-gen-pothos",
  "repository": "git@github.com:proto-graphql/proto-graphql-js.git",
  "author": "izumin5210 <m@izum.in>",
  "license": "MIT",
  "main": "./lib/index.js",
  "module": "./module/index.js",
  "types": "./lib/index.d.ts",
  "engines": {
    "node": ">= 14.0.0"
  },
  "dependencies": {
    "@proto-graphql/codegen-core": "^0.1.0",
    "@proto-graphql/proto-descriptors": "^0.1.0",
    "@proto-graphql/protoc-plugin-helpers": "^0.1.0",
    "google-protobuf": "^3.20.1"
  },
  "devDependencies": {
    "@pothos/core": "^3.22.7",
    "@testapis/ts-proto": "^0.5.1",
    "@types/glob": "^8.0.0",
    "glob": "^8.0.1"
  },
  "files": [
    "bin/",
    "include/",
    "lib/",
    "module/"
  ],
  "scripts": {
    "build": "tsc --build . && tsc --build tsconfig.module.json",
    "clean": "rimraf lib/ module/ && tsc --build . --clean && tsc --build tsconfig.module.json --clean",
    "test": "jest --coverage",
    "test:integration": "TEST_TARGET=integration jest"
  }
}
